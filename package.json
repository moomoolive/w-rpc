{
  "name": "w-worker-rpc",
  "version": "0.1.0",
  "license": "MIT",
  "description": "A simple bi-directional rpc library for javascript thread communication",
  "scripts": {
    "test": "vitest run",
    "test-watch": "vitest watch",
    "ci": "npm run test",
    "docs": "typedoc --out docs src/index.ts",
    "build-node": "tsc --project tsconfig.json",
    "build-web": "node ./webBuild.mjs",
    "build": "npm run build-node && npm run build-web"
  },
  "devDependencies": {
    "esbuild": "^0.17.11",
    "typedoc": "^0.24.0-beta.2",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "keywords": [
    "multi-threading",
    "workers",
    "rpc"
  ],
  "homepage": "https://github.com/moomoolive/w-worker-rpc",
  "bugs": {
    "url": "https://github.com/moomoolive/w-worker-rpc/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moomoolive/w-worker-rpc"
  }
}
